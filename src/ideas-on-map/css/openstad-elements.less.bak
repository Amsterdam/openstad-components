.openstad-align-right-container {
  text-align: right;
}

.openstad-margin-right {
  margin-right: 15px;
}

.openstad-button-basics() {
  position: relative;
  display: inline-block;
  padding: 12px 15px;
  font-size: 16px;
  font-weight: 600;
  line-height: 20px;
  border: 0 none;
  cursor: pointer;

  &:active, &:focus {
    outline: 0;
  }

}

.openstad-button {

  .openstad-button-basics;
  background-color: #c4c4c4;

  &:hover {
    text-decoration: underline;
    background-color: #aaa;
  }

}

.osc-button-blue,
.openstad-button-blue {

  .openstad-button-basics;
  color: white;
  background-color: #164995;

  &:hover {
    text-decoration: underline;
    background-color: #003066;
  }

}

.openstad-close-button {
  .openstad-close-button-background;
  position: absolute;
  top: 20px;
  right: 15px;
  width: 20px;
  height: 20px;
  background-color: transparent;
  border: 0 none;
  cursor: pointer;
  z-index: 20;

  &:active, &:focus {
    outline: 0;
  }
  
}

.ocs-gray-text {
  color: #9a9a9a;
}

.openstad-not-logged-in-button {

  .openstad-inloggen-background;
  padding-left: 40px;
}

.openstad-default-select {
  .openstad-arrow-down-black-background;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  height: 44px;
  padding: 0 20px;
  padding-right: 40px;
  border: solid 1px #434343;
  outline: none;
  font-size: 16px;
  font-weight: 400;
  line-height: 44px;
  text-align: left;
  background-color: white;
}

.openstad-default-input {
	appearance: none;
	height: 44px;
	padding: 0 20px;
	padding-right: 40px;
	border: solid 1px #434343;
	outline: none;
	font-size: 16px;
	font-weight: 400;
	line-height: 44px;
	text-align: left;
	background-color: white;
}

.openstad-clear-both {
  clear: both;
}

.osc-number-button {

	display: block;
	width: 250px;
	font-size: 0px;
	font-weight: 600;
	text-decoration: none;
	height: 43px;
	margin-right: 2px;
	
	.osc-number-plates {
	  padding: 7px 6px 7px 10px;
		font-size: 0px;
		margin-right: 0px;
    float: left;
	}
	
	.osc-number-plate {
		margin-right: 4px;
		display: inline-block;
		font-size: 18px;
		background: #e8e8e8;
		background: linear-gradient(#e8e8e8 50%, #ffffff 50%);
		padding: 0;
		display: inline-block;
		height: 29px;
		line-height: 31px;
		width: 20px;
		text-align: center;
		color: black;
		border-radius: 3px;
		font-weight: 800;
		vertical-align: middle;
	}

	.osc-number-button-text {
    .openstad-button-basics;
    display: block;
    float: left;
    width: 118px;
    height: 43px;
    margin-left: 2px;
	  font-size: 18px;
    line-height: 20px;

    &:hover {
      background-color: #003066 !important;
    }
	}

}

.osc-idea-details-editbutton {
  display: block;
  position: relative;
  appearance: none;
  width: 100%;
  height: 46px;
  margin-top: 20px;
  margin-left: 0;
  padding-left: 46px;
  padding-right: 3px;
  font-size: 16px;
  font-weight: 500;
  text-overflow: ellipsis;
  text-align: center;
  border-radius: 0;
  border-right: 2px solid #e8e8e8;
  border-bottom: 2px solid #e8e8e8;
  background-color: whitesmoke;
  background-position: 5px 5px;
  background-repeat: no-repeat;
  background-size: 36px 36px;
  color: black;
  overflow: hidden;
  cursor: pointer;

  &:after {
    position: absolute;
    top: 5px;
    left: 5px;
    width: 34px;
    height: 34px;
    background-color: black;
    content: '';
  }

  &.osc-delete:after {
    background-image: @openstad-delete-button-image;
  }

  &.osc-edit:after {
    background-image: @openstad-edit-button-image;
  }

}


